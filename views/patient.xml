<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <!-- Patients Kanban View -->
    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban sample="1" default_order="id asc">
                <field name="id" />
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        ID: <field name="reference"/>
                                    </li><li>
                                        Name: <field name="name"/>
                                    </li>
                                    <li>
                                        Age: <field name="age"/>
                                    </li>
                                    <li>
                                        Gender: <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- list the details of patient (tree)   -->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="reference"/>
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <field name="appointment_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- create the field in form   -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <!-- Add the header of form view -->
                <header>
                    <!--  Crontrol statusBar  -->
                    <button id="button_confirm" name="action_confirm"  string="Confirm" class="btn-primary"
                            states = "draft" confirm="Are you sure that you need to confirm?" type="object"/>
                    <button id="button_done" name="action_done"  string="Mark As Done" class="btn-primary"
                            states = "confirm" type="object"/>
                    <button id="button_draft" name="action_draft"  string="Set To Draft" class="btn-primary"
                            states = "cancel" type="object"/>
                    <button id="button_cancel" name="action_cancel"  string="Cancel" states = "draft,done,confirm"
                            confirm="Are you sure that you need to cancel?" type="object"/>
                    <button id="button_create_appointment" name="%(mm_hospital.action_create_appointment)d"  string="Create Appointment" class="btn-primary"
                            type="action"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm" />
                </header>

                <!-- Put the field of case (dans une case bien designer )  -->
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <!--add the title name "New" at the create new patient-->
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>

                    <!--  Put the label before the field -->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="responsible_id"/>
                            <field name="age"/>
                            <field name="appointment_count"/>
                        </group>
                        <group>
                            <field name="gender" invisible ="context.get('hide_gender')"/>
                            <field name="note"/>
                        </group>
                    </group>

                </sheet>

                <!--  add chat on view  -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!-- create the search of the view    -->
    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="note"/>

                <!--   add filter by (grouper par)  -->
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]" />
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]" />
                <filter string="Others" name="other" domain="[('gender', '=', 'other')]" />

                <!--   add group by (grouper par)  -->
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                    <filter string="Patient Name" name="patient_name" context="{'group_by': 'name'}"/>
                    <filter string="Status" name="patient_status" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="responsible_id" context="{'group_by': 'responsible_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <!-- Action of left menu -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_gender':1, 'search_default_male':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>
    <!-- Top menu item -->
    <menuitem id="menu_hospital_root"
              name="Hospital"
              sequence="10"/>

    <menuitem id="menu_patient_root"
              name="Patients"
              parent="menu_hospital_root"
              sequence="10"/>

    <!-- Left menu item -->
    <menuitem id="menu_patient"
              name="Patients"
              parent="menu_patient_root"
              action="action_hospital_patient"
              sequence="10"/>
</odoo>
