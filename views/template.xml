<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="patients_page" name="Hospital Patient">
        <t t-call="website.layout">
            <div class="container">
                Bonjour les amis
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>
                                Name
                            </td>
                            <td>
                                Age
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="patients" t-as="patient">
                            <tr>
                                <td>
                                    <t t-esc="patient.name"/>
                                </td>
                                <td>
                                    <t t-esc="patient.age"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

</odoo>
